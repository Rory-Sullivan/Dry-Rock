<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <title>Dry Rock</title>
  </head>
  <body class="container-md bg-light">
    <div class="row mb-5">
      <div class="bg-primary text-white text-center w-100 mb-3">
        <h1 class="display-4">Overview</h1>
      </div>

      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Place</th>
            <th scope="col">Tomorrow</th>
            <th scope="col">Saturday</th>
            <th scope="col">Sunday</th>
          </tr>
        </thead>

        <tbody>
          {% for place in context %}
            <!-- Rotation of zero so that stretched link works as expected -->
            <tr style="transform: rotate(0);">
              <th scope="row">
                <a href="#{{ place.name }}Header" class="stretched-link"></a>
                {{ place.name }}
              </th>

              {% if total_rains[0][place.name] <= 0.5 %}
                <td class="text-success">
                  {{ total_rains[0][place.name] }} mm
                </td>
              {% else %}
                <td>
                  {{ total_rains[0][place.name] }} mm
                </td>
              {% endif %}

              {% if total_rains[1][place.name] <= 0.5 %}
                <td class="text-success">
                  {{ total_rains[1][place.name] }} mm
                </td>
              {% else %}
                <td>
                  {{ total_rains[1][place.name] }} mm
                </td>
              {% endif %}

              {% if total_rains[2][place.name] <= 0.5 %}
                <td class="text-success">
                  {{ total_rains[2][place.name] }} mm
                </td>
              {% else %}
                <td>
                  {{ total_rains[2][place.name] }} mm
                </td>
              {% endif %}
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

    {% for place in context %}
      <div class="row mb-5">
        <div class="bg-secondary text-white text-center w-100 mb-3">
          <h1 id="{{ place.name }}Header" class="display-4">{{ place.name }}</h1>
        </div>
        <h2>Tomorrow - {{place.tomorrows_date}}</h2>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Time</th>
              <th scope="col">Rain</th>
              <th scope="col">Temp</th>
              <th scope="col">Wind</th>
            </tr>
          </thead>
          <tbody>

            {% for interval in place.tomorrows_intervals %}
              {% set precip_variable = interval.variables_dict["precipitation"] %}
              {% set temp_variable = interval.variables_dict["temperature"] %}
              {% set wind_variable = interval.variables_dict["wind"] %}

              <tr>
                <th scope="row">{{interval.start_time}}</td>
                <td>{{ precip_variable.value }} {{ precip_variable.unit }}</td>
                <td>{{ temp_variable.value }} {{ temp_variable.unit|safe }}</td>
                <td>{{ wind_variable.value }} {{ wind_variable.unit }} from {{ wind_variable.direction }}
                </td>
              </tr>

            {% endfor %}
          </tbody>
        </table>

        <div class=w-100>
          <small>Sunrise: {{ place.sunrise_time }}</small>
          <small>Sunset: {{ place.sunset_time }}</small>
          <small class="float-right">Updated at: {{place.updated_at}}</small>
        </div>

        <a href="{{ place.yr_link }}">
          <p>{{ place.cite_yr }}</p>
        </a>
      </div>
    {% endfor %}


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>
